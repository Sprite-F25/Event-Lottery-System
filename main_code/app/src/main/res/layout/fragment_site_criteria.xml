<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


    <!-- Content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section 1: Event Waiting List Explanation -->
            <TextView
                android:id="@+id/tv_waiting_list_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/waiting_list_explanation"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp" />

            <!-- Section 2: Geolocation -->
            <TextView
                android:id="@+id/tv_geolocation_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/geolocation_heading"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_geolocation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/geolocation_description"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <!-- Toggle switch with label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_location_tracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_location_tracking_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_location_tracking"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Privacy note -->
            <TextView
                android:id="@+id/tv_privacy_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_privacy_note"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingStart="0dp"
                android:paddingTop="8dp" />

            <!-- Section 3: Notification Preferences -->
            <TextView
                android:id="@+id/tv_notification_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="32dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_notification_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose whether you want to receive notifications from organizers and admins."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp" />

            <!-- Toggle switch with label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_notifications_opt_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_notifications_opt_out_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Receive notifications from organizers and admins"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

