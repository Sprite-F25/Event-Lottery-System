<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_entrants_dialog_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notify_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_selected_entrants"
        android:layout_marginBottom="12dp"
        app:backgroundTint="@color/green3"
        app:icon="@drawable/ic_notifications_logo"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notify_cancelled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_cancelled_entrants"
        android:layout_marginBottom="12dp"
        app:backgroundTint="@color/green3"
        app:icon="@drawable/ic_notifications_logo"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notify_waiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_waiting_entrants"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/green3"
        app:icon="@drawable/ic_notifications_logo"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</LinearLayout>

